#!/bin/bash

# Eventide FFXI Launcher - Linux Launch Script
# This script launches the game through Wine

# Set Wine prefix (adjust to your Wine installation)
export WINEPREFIX="${HOME}/.wine-ffxi"
export WINEARCH=win32

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Change to the game directory
cd "$SCRIPT_DIR" || exit 1

# Launch Ashita with Wine
wine ashita-cli.exe --config config/boot/Eventide.ini

# Alternative: Use Proton (if you have Steam)
# ~/.steam/steam/steamapps/common/Proton 8.0/proton run ashita-cli.exe --config config/boot/Eventide.ini
